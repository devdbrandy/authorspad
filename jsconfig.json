{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "module": "commonjs",
    "paths": {
      "@config/*": ["src/config/*"],
      "@database/*": ["src/database/*"],
      "@factories/*": ["src/database/factories/*"],
      "@helpers/*": ["src/helpers/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@models/*": ["src/database/models/*"],
      "@modules/*": ["src/modules/*"],
      "@services/*": ["src/services/*"],
      "@src/*": ["src/*"],
      "@test/*": ["test/*"]
    }
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "dist"
  ]
}
