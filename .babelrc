{
  "presets": [
    [
      "@babel/env",
      {
        "targets": {
          "node": "current"
        },
      }
    ]
  ],
  "plugins": [
    [
      "@babel/transform-runtime",
      {
        "absoluteRuntime": false,
        "corejs": false,
        "helpers": true,
        "regenerator": true,
        "useESModules": false
      }
    ],
    [
      "module-resolver", {
      "root": ["./src"],
      "alias": {
        "@config": "./src/config",
        "@database": "./src/database",
        "@factories": "./src/database/factories",
        "@helpers": "./src/helpers",
        "@middlewares": "./src/middlewares",
        "@models": "./src/database/models",
        "@modules": "./src/modules",
        "@services": "./src/services",
        "@src": "./src",
        "@test": "./test"
      }
    }]
  ]
}
