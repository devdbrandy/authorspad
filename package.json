{
  "name": "irobot",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && babel src -d dist",
    "lint": "eslint src",
    "start": "node ./dist/bin/www",
    "start:dev": "DEBUG=irobot:* nodemon -r ./env/loadConfigs.js --exec babel-node src/bin/www"
  },
  "nodemonConfig": {
    "ext": "js, html, css, json",
    "watch": [
      "src",
      "public"
    ]
  },
  "dependencies": {
    "@babel/runtime": "^7.4.5",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "dotenv-extended": "^2.4.0",
    "express": "~4.16.0",
    "http-errors": "~1.6.2",
    "jade": "~1.11.0",
    "morgan": "~1.9.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/node": "^7.4.5",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "babel-plugin-module-resolver": "^3.2.0",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-import-resolver-babel-module": "^5.1.0",
    "eslint-plugin-import": "^2.17.3",
    "husky": "^2.4.1",
    "lint-staged": "^8.2.1",
    "nodemon": "^1.19.1",
    "rimraf": "^2.6.3"
  },
  "engines": {
    "node": "12.4.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
